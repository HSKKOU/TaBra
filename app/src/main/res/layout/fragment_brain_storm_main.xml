<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.ac.titech.itpro.sdl.tabra.Activity.BrainStorming.Main.BrainStormMainActivityFragment">


    <LinearLayout
        android:id="@+id/brainstorm_main_custom_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <AbsoluteLayout
            android:id="@+id/brainstorm_main_whiteboard"
            android:layout_width="1500dp"
            android:layout_height="1000dp"
            android:background="@drawable/frame01"
            >

        </AbsoluteLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/brainstorm_main_footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|fill_horizontal"
        android:background="#aaa"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >



        </LinearLayout>

        <Button
            android:id="@+id/brainstorm_main_syncronize_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="SYNC"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

        <Button
            android:id="@+id/brainstorm_main_create_postit_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="ï¼‹"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>
