<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.ac.titech.itpro.sdl.tabra.Activity.BrainStorming.BrainStormMainActivityFragment">


    <LinearLayout
        android:id="@+id/brainstorm_main_custom_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <AbsoluteLayout
            android:id="@+id/brainstorm_main_whiteboard"
            android:layout_width="2000dp"
            android:layout_height="2000dp"
            android:background="@drawable/frame01"
            >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="#ffc0cb"
                android:layout_x="500dp"
                android:layout_y="500dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="コメントコメントコメントコメントコメントコメントコメントコメント"
                    />

            </LinearLayout>

        </AbsoluteLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/brainstorm_main_footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|fill_horizontal"
        android:background="#aaa"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >



        </LinearLayout>

        <Button
            android:id="@+id/brainstorm_main_create_postit_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="＋"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>
