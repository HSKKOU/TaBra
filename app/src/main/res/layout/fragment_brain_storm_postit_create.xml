<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.ac.titech.itpro.sdl.tabra.Activity.BrainStorming.CreatePostit.BrainStormPostitCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/postit_create_postit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:orientation="vertical"
                android:background="#ffc0cb"
                >

                <TextView
                    android:id="@+id/postit_creat_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:text="コメントコメントコメントコメントコメントコメントコメントコメント"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:text="作成者作成者作成者作成者作成者"
                    />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:background="#ddd"
            android:padding="20dp"
            >

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#ffc0cb"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#f0e68c"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#add8e6"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="#aaa"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="40dp"
            android:layout_gravity="center_vertical"
            />


    </LinearLayout>

</LinearLayout>
